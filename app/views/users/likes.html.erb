<% content_for :user_content do %>
  <ul class="user-tabs">
    <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
    <li class="active"><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    <li><%= link_to("ライカたち", "/users/#{@user.id}/likers") %></li>
  </ul>

  <% @likes.each do |like| %>
    <% post = Post.find_by(id: like.post_id) %>
    
    <div class="posts-index-item">
      <div class="post-left">
      <% if post.user %>
        <img src="<%= "/user_images/#{post.user.image_name}" %>">
      <% else %>
        <img src="/user_images/deleted_user.jpg">
      <% end %>
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <% if post.user %>
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          <% else %>
            <%= Settings.user.deleted_user_name %>
          <% end %>
        </div>
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render template: "layouts/user" %>